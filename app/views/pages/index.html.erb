		<% Category.where(id:[1,2]).each do |category| %>
		  <div class="iteams">
		    <% category.galleries.limit(3).each do |gallery| %>
		    <div class="iteam">
		    	<div class="img">
					<%= image_tag gallery.image.url %>
					<div class="title"><%= gallery.title %>
						<small>объект</small>
					</div>
				</div>
		    </div>
		    <% end %>
		  </div>
		<% end %>
		<a href="/pages/works" class="buttonB">Все проекты</a>
	</div>
</section>

